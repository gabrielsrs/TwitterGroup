extends index.pug

block head
  link(rel="stylesheet", href="/css/groupsSettings.css")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/3.0.1/js.cookie.min.js", integrity="sha512-wT7uPE7tOP6w4o28u1DN775jYjHQApdBnib5Pho4RB0Pgd9y7eSkAV1BTqQydupYDB9GBhTcQQzyNMPMV3cAew==", crossorigin="anonymous" referrerpolicy="no-referrer")

block content
  each value, key in groups
    div.all
      div.up
        div.group-name
          span= key
        div.toggle
      div.down(hidden)
        div.down-elements
          form(class="search-user", onsubmit="event.preventDefault()")
            label(for="username", id="user-tag") @
            input(class="username", type="text", placeholder="Buscasr usu√°rio", autocomplete="off")
            button(class="validate-user", type="submit") Buscar
          ul.group-users
            each info in value
              li.user
                img(class="profile-picture", src=`${info.profile_image_url}`)
                dev.user-text
                  span.name= info.name
                  span.arroba= "@" + info.username 
                div.delete

block script
  script(type="module", src="/path/to/js.cookie.mjs")
  script(type="text/javascript" src="/js/groupSettings.js")